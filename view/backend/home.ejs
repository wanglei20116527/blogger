<!doctype html>

<html ng-app="Backend">
	<head>
		<meta charset="utf-8">
		
		<link rel="stylesheet" type="text/css" href="/backend/static/editormd/css/editormd.min.css">
		<link rel="stylesheet" type="text/css" href="/backend/static/build/css/ui-bootstrap-csp.css">
		<link rel="stylesheet" type="text/css" href="/backend/static/build/css/main.css">

	</head>

	<body class="app" ng-controller="mainCtrol">
		<div class="body" ng-class="{extend: collapseMenuBar}">
			<div 
				ng-view 
				class="view"
				onload="onViewLoaded()">
			</div>
		</div>

		<aside class="menu-bar" ng-class="{collapse: collapseMenuBar}">
			<nav>
				<ul class="main-menu">
					<li ng-repeat="menuItem in menu"
						ng-class = "{active: menuItem.active, 'has-sub-menu': menuItem.hasSubMenu}">
						<a 	class="clearfix"
							href="{{::menuItem.url}}">
							<span 
								class="text fl" 
								ng-bind="::menuItem.name">
							</span>
							<img 
								ng-if="::menuItem.hasSubMenu"
								class="fr"
								ng-src="/backend/static/image/ic_keyboard_arrow_down_black_24px.svg"
							/>
						</a>

						<ul ng-show="::menuItem.hasSubMenu">
							<li ng-repeat="subMenuItem in menuItem.subMeun">
								<a 	ng-class="{active: subMenuItem.active}"
									href="{{::subMenuItem.url}}">
									<span
										class="text"
										ng-bind="::subMenuItem.name">
									</span>
								</a>
							</li>
						</ul>
					</li>
				</ul>
			</nav>
		</aside>

		<header class="header clearfix">
			<div class="header-nav fl clearfix">
				<h1 class="title fl">DASHBOARD</h1>
				<a class="menu-bar-toggle fl" 
				   ng-click="toogleMenuBar()">
					<span>
						<i></i>
						<i></i>
						<i></i>
					</span>
				</a>
			</div>

			<div class="header-profile fr clearfix">
				<a class="intro fl clearfix"
				   href="#!/profile">
					<div class="photo-wrapper fl">
						<img class="photo" 
						 	 ng-src="{{user.photo}}"
						/>
					</div>
					<span class="name fl" 
						  title="{{user.name}}" 
						  ng-bind="user.name">	  	
					</span>
				</a>

				<div class="btn-group fl">
					<button class="btn logout-btn" 
							ng-click="logout()">
						<i class="icon iconfont">&#xe669;</i>
					</button>
				</div>
			</div>
		</header>

		<div class="message-area">
			<div class="message-list fr">
				<div ng-repeat="msg in msgQueue"
					 class="message-dialog" ng-class="msg.cls">
					 <div class="icon-wrapper">
					   	<i 	class="icon iconfont" 
					   		ng-bind-html="msg.icon | htmlToBeTrust">	
					   	</i>
					 </div>
					 <p class="message" ng-bind="msg.msg"></p>
				</div>
			</div>
		</div>

		<script type="text/javascript" src="/backend/static/jquery.min.js"></script>
		<script type="text/javascript" src="/backend/static/editormd/editormd.min.js"></script>

		<script type="text/javascript" src="/backend/static/angular.min.js"></script>
		<script type="text/javascript" src="/backend/static/angular-route.min.js"></script>
		<script type="text/javascript" src="/backend/static/angular-ui-bootstrap/ui-bootstrap-tpls.js"></script>
		<script type="text/javascript" src="/backend/static/src/app.js"></script>
		<script type="text/javascript" src="/backend/static/src/utils/validation.js"></script>
		<script type="text/javascript" src="/backend/static/src/utils/uuid.js"></script>

		<script type="text/javascript" src="/backend/static/src/filter/htmlToBeTrust.js"></script>
		<script type="text/javascript" src="/backend/static/src/filter/percent.js"></script>
		<script type="text/javascript" src="/backend/static/src/filter/byteFormat.js"></script>
		
		<script type="text/javascript" src="/backend/static/src/config/config.js"></script>

		<script type="text/javascript" src="/backend/static/src/services/model/user.js"></script>
		<script type="text/javascript" src="/backend/static/src/services/model/category.js"></script>
		<script type="text/javascript" src="/backend/static/src/services/model/article.js"></script>
		<script type="text/javascript" src="/backend/static/src/services/model/directory.js"></script>
		<script type="text/javascript" src="/backend/static/src/services/model/picture.js"></script>
		<script type="text/javascript" src="/backend/static/src/services/pictureUploader.js"></script>
		<script type="text/javascript" src="/backend/static/src/services/clipboard.js"></script>

		<script type="text/javascript" src="/backend/static/src/controllers/main.controller.js"></script>
		<script type="text/javascript" src="/backend/static/src/controllers/article/article.controller.js"></script>

		<script type="text/javascript" src="/backend/static/src/controllers/article/article.list.controller.js"></script>
		<script type="text/javascript" src="/backend/static/src/controllers/article/article.write.controller.js"></script>
		<script type="text/javascript" src="/backend/static/src/controllers/article/article.category.controller.js"></script>

		<script type="text/javascript" src="/backend/static/src/controllers/index/index.controller.js"></script>
		<script type="text/javascript" src="/backend/static/src/controllers/picture/picture.controller.js"></script>
		<script type="text/javascript" src="/backend/static/src/controllers/profile/profile.controller.js"></script>
		<script type="text/javascript" src="/backend/static/src/controllers/profile/profile.basic.controller.js"></script>
		<script type="text/javascript" src="/backend/static/src/controllers/profile/profile.password.controller.js"></script>
		<script type="text/javascript" src="/backend/static/src/controllers/profile/profile.photo.controller.js"></script>

		<script type="text/javascript" src="/backend/static/src/directives/dialog/dialog.js"></script>
		<script type="text/javascript" src="/backend/static/src/directives/editor/editor.js"></script>
		<script type="text/javascript" src="/backend/static/src/directives/checkbox/checkbox.js"></script>
		<script type="text/javascript" src="/backend/static/src/directives/contextMenu/contextMenu.js"></script>
		<script type="text/javascript" src="/backend/static/src/directives/event/onContextMenu.js"></script>

		
		<script type="text/javascript" src="/backend/static/src/directives/dialog/uploadPhotoDialog/uploadPhotoDialog.js"></script>
		<script type="text/javascript" src="/backend/static/src/directives/dialog/addCategoryDialog/addCategoryDialog.js"></script>
		<script type="text/javascript" src="/backend/static/src/directives/dialog/updateCategoryDialog/updateCategoryDialog.js"></script>
		<script type="text/javascript" src="/backend/static/src/directives/dialog/confirmDialog/confirmDialog.js"></script>
		<script type="text/javascript" src="/backend/static/src/directives/dialog/imageUploadDialog/imageUploadDialog.js"></script>
	</body>
</html>